{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
{#  Hero section  #}
<div class="flex flex-row gap-0 h-[751px]">
    <div class="w-1/2 flex flex-col gap-10 justify-center items-center bg-[#E8F0E3]">
        <h2 class="w-1/2 font-medium text-6xl">Bienvenue</h2>
        <p class="w-1/2 font-light text-lg">
            Découvrez notre univers de produits durables et éthiques pour une consommation responsable <br><br>
            Retrouvez des articles d’hygiène & beauté, des accessoires & boissons et du prêt à porter
        </p>
    </div>
    <div class="w-1/2">
        <img class="w-full h-full object-cover object-center" src="{{ asset('images/hero.jpg') }}" alt="Hero image">
    </div>
</div>

{#  Articles section  #}
<div class="flex flex-row justify-start px-[100px] py-[31px]">
    <div>
        NOS PRODUITS
    </div>
</div>
<div class="flex flex-row flex-wrap">
    {% for article in articles %}
        <div class="w-1/3 h-[692px]">
            <div class="h-2/3">
                <img class="w-full h-full object-cover object-center" src="{{ asset(article.pictureLink) }}" alt="{{ article.name }}">
            </div>
            <div class="h-1/3">
                <h2>{{ article.name }}</h2>
                <p>{{ article.shortDescription }}</p>
                <p>{{ article.price }}</p>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
